{
  "extends": "stylelint-config-standard",
  "ignoreDisables": true,
  "rules": {
    "property-no-unknown": [ true, {
      "ignoreProperties": [
        "lost-column",
        "lost-align",
        "lost-center",
        "lost-utility",
        "lost-offset"
      ]
    }],
    "string-quotes": double,
    "declaration-block-properties-order": [
      "position",
      "z-index",
      "top",
      "right",
      "bottom",
      "left",
      "display",
      "overflow",
      "box-sizing",
      "width",
      "max-width",
      "height",
      "max-height",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "border",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "background",
      "background-color",
      "background-image",
      "color",
      "font-family",
      "font-size",
      "@add-mixin font-size",
      "font-weight",
      "text-transform",
      "line-height",
      "text-align",
      "cursor"
    ],
    "declaration-empty-line-before": "never",
    "max-nesting-depth": 4,
    "declaration-no-important": true,
    "selector-root-no-composition": true,
    "no-browser-hacks": true,
    "no-unsupported-browser-features": [ true, {
      "browsers": "last 1 version",
      ignore: ["font-unicode-range"]
    }],
    "at-rule-empty-line-before": ["always", {
      except: ["all-nested", "blockless-after-same-name-blockless", "blockless-group"],
      ignore: ["after-comment"]
    }],
    "selector-list-comma-newline-after": "always-multi-line"
  }
}
